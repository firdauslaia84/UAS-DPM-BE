{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./build",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "@types/*": ["./@types/*"]
    }
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "backend/**/*.ts",
    "@types/**/*.d.ts",
    "controllers/**/*.ts",
    "middleware/**/*.ts",
    "models/*.ts",
    "@types/express/custom.d.ts"
  ],
  "exclude": ["node_modules"],
  "files": ["@types/express/custom.d.ts"]
}
